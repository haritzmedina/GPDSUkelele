<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gpds.ukelele" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".Global">
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.gpds.ukelele.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChordsActivity"
            android:label="@string/title_activity_chords"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.gpds.ukelele.ChordsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WikiActivity"
            android:label="@string/title_activity_wiki"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.gpds.ukelele.WikiActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SongsActivity"
            android:label="@string/title_activity_songs"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.gpds.ukelele.SongsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LearnSongActivity"
            android:label="@string/title_activity_learn_song"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.gpds.ukelele.LearnSongActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
